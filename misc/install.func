# This function sets color variables for formatting output in the terminal
color() {
  YW=$(echo "\033[33m")
  BL=$(echo "\033[36m")
  RD=$(echo "\033[01;31m")
  BGN=$(echo "\033[4;92m")
  GN=$(echo "\033[1;92m")
  DGN=$(echo "\033[32m")
  CL=$(echo "\033[m")
  RETRY_NUM=10
  RETRY_EVERY=3
  CM="${GN}âœ”ï¸${CL}"
  CROSS="${RD}âœ–ï¸${CL}"
  BFR="\\r\\033[K"
  HOLD=" "
}

# This function enables IPv6 if it's not disabled and sets verbose mode if the global variable is set to "yes"
verb_ip6() {
  if [ "$VERBOSE" = "yes" ]; then
    STD=""
  else STD="silent"; fi
  silent() { "$@" >/dev/null 2>&1; }
  if [ "$DISABLEIPV6" == "yes" ]; then
    echo "net.ipv6.conf.all.disable_ipv6 = 1" >>/etc/sysctl.conf
    $STD sysctl -p
  fi
}

# This function sets error handling options and defines the error_handler function to handle errors
catch_errors() {
  set -Eeuo pipefail
  trap 'error_handler $LINENO "$BASH_COMMAND"' ERR
}

# This function handles errors
error_handler() {
  if [ -n "$SPINNER_PID" ] && ps -p $SPINNER_PID > /dev/null; then kill $SPINNER_PID > /dev/null; fi
  printf "\e[?25h"
  local exit_code="$?"
  local line_number="$1"
  local command="$2"
  local error_message="${RD}[ERROR]${CL} in line ${RD}$line_number${CL}: exit code ${RD}$exit_code${CL}: while executing command ${YW}$command${CL}"
  echo -e "\n$error_message"
  if [[ "$line_number" -eq 23 ]]; then
    echo -e "The silent function has suppressed the error, run the script with verbose mode enabled, which will provide more detailed output.\n"
  fi
}

spinner() {
    local frames=('â ‹' 'â ™' 'â ¹' 'â ¸' 'â ¼' 'â ´' 'â ¦' 'â §' 'â ‡' 'â ')
    local spin_i=0
    local interval=0.1  # Sekunden
    printf "\e[?25l"  # Cursor ausblenden

    # Farbcodes fÃ¼r Orange (ANSI 256 Farben)
    local orange="\e[38;5;214m"

    while true; do
        # Spinner mit 1 Leerzeichen davor und 1 Leerzeichen danach anzeigen
        printf "\r ${orange}%s\e[0m " "${frames[spin_i]}"
        
        # Frame-Index erhÃ¶hen und zurÃ¼cksetzen, wenn notwendig
        spin_i=$(( (spin_i + 1) % ${#frames[@]} ))
        
        # VerzÃ¶gerung fÃ¼r das Intervall
        sleep "$interval"
    done
}

# This function displays an informational message with a yellow color.
msg_info() {
    local msg="$1"
    echo -ne " ${HOLD} ${YW}${msg}   "
    spinner &  # Start spinner in the background
    SPINNER_PID=$!  # Save spinner process ID
}

# This function displays a success message with a green color.
msg_ok() {
  if [ -n "$SPINNER_PID" ] && ps -p $SPINNER_PID > /dev/null; then kill $SPINNER_PID > /dev/null; fi
  printf "\e[?25h"
  local msg="$1"
  echo -e "${BFR} ${CM} ${GN}${msg}${CL}"
}

# This function displays a error message with a red color.
msg_error() {
  if [ -n "$SPINNER_PID" ] && ps -p $SPINNER_PID > /dev/null; then kill $SPINNER_PID > /dev/null; fi
  printf "\e[?25h"
  local msg="$1"
  echo -e "${BFR} ${CROSS} ${RD}${msg}${CL}"
}

# This function sets up the Container OS by generating the locale, setting the timezone, and checking the network connection
setting_up_container() {
  msg_info "Setting up Container OS"
  if grep -qEi "debian|ubuntu" /etc/os-release; then
      # FÃ¼r Debian/Ubuntu-basierte Systeme
      if [[ ! -f /etc/locale.gen ]]; then
        echo "$LANG UTF-8" > /etc/locale.gen
      fi
      sed -i "/$LANG/ s/^\(# \)//" /etc/locale.gen
      locale-gen >/dev/null
  elif grep -qEi "fedora|centos|rocky|almalinux|opensuse" /etc/os-release; then
	  if [[ ! -f /etc/locale.conf ]]; then
        echo "LANG=$LANG" > /etc/locale.conf
      fi
      export LANG=$LANG
  else
      msg_error "Unsupported OS detected!"
      exit 1
  fi
  ln -sf /usr/share/zoneinfo/$tz /etc/localtime
  for ((i = RETRY_NUM; i > 0; i--)); do
    if [ "$(hostname -I)" != "" ]; then
      break
    fi
    echo 1>&2 -en "${CROSS}${RD} No Network! "
    sleep $RETRY_EVERY
  done
  if [ "$(hostname -I)" = "" ]; then
    echo 1>&2 -e "\n${CROSS}${RD} No Network After $RETRY_NUM Tries${CL}"
    echo -e " ðŸ–§  Check Network Settings"
    exit 1
  fi
  rm -rf /usr/lib/python3.*/EXTERNALLY-MANAGED
  # OS-specific handling for network service deactivation
  if grep -qEi "debian|ubuntu" /etc/os-release; then
    # Debian/Ubuntu use systemd-networkd
    if systemctl list-units --type=service | grep -q "systemd-networkd-wait-online.service"; then
      systemctl disable -q --now systemd-networkd-wait-online.service
    else
      echo "systemd-networkd-wait-online.service not found, skipping disable."
    fi
  elif grep -qEi "centos|rocky|almalinux|fedora" /etc/os-release; then
    # CentOS/Rocky/AlmaLinux/Fedora typically use NetworkManager
    echo "NetworkManager detected in CentOS/Rocky/AlmaLinux/Fedora, skipping systemd-networkd-wait-online.service."
  else
    echo "Unsupported OS detected for network service handling."
  fi
  
  # Output the network status
  msg_ok "Set up Container OS"
  msg_ok "Network Connected: ${BL}$(hostname -I)"
}

